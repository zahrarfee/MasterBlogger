@page
@model MB.Presentation.MVCCore.Areas.Administrator.Pages.ArticleManagement.ListModel
@{
}



<div class="card">
    <div class="card-header">
        <h3 class="float-left">Article List</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./Create" asp-area="Administrator">Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>ArticleCategory</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model.Articles)
                {
                <tr>
                    <td>@article.Id</td>
                    <td>@article.Title</td>
                    <td>@article.ArticleCategory</td>
                    <td>
                        @if (article.IsDeleted)
                        {
                            <i class="fa fa-close fa-2x text-danger"></i>
                        }
                        else
                        {
                            <i class="fa fa-check fa-2x text-success"></i>
                        }
                    </td>
                    <td>@article.CreationDate</td>
                    <td>
                        <a class="btn btn-warning float-left mr-3" asp-page="./Edit" asp-route-id="@article.Id">Rename</a>
                        @if (article.IsDeleted)
                        {
                            <a class="btn btn-success float-left" asp-page-handler="Activate" asp-route-id="@article.Id">Activate</a>

                        }
                        else
                        {
                            <a class="btn btn-danger float-left" asp-page-handler="Remove" asp-route-id="@article.Id">Remove</a>

                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>